{
  "name": "zegocloud-video-chat-app",
  "private": true,
  "version": "1.0.0",
  "description": "ZegoCloud Video Chat - production-ready video call app",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/ZegoCloud-Video-Chat-App.git"
  },
  "keywords": ["video-chat", "zegocloud", "webrtc", "react", "express"],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && set PORT=5001 && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "start:prod": "cross-env NODE_ENV=production node server/index.js",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  }
}
